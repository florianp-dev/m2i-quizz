@model ModelEntities.ModelViews.QuizzViewModel

@{
    ViewBag.Title = "Edit";

}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Question</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.QuizzID)

    <div class="form-group">
        @Html.LabelFor(model => model.CandidateFirstname, "Nom du candidat: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CandidateFirstname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CandidateFirstname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CandidateLastname, "Prénom du candidat: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.CandidateLastname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CandidateLastname, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TechnoID, "Technologie:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.TechnoName)
            @Html.HiddenFor(model => model.TechnoID, "TechnoID")
            @Html.ValidationMessageFor(model => model.TechnoID, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(model => model.NbQuestions, "NbQuestions")
    @Html.HiddenFor(model => model.UserID, "UserID")
    <div class="form-group">
        @Html.LabelFor(model => model.DifficultyID, "Difficulté:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.DifficultyName)
            @Html.HiddenFor(model => model.DifficultyID, "DifficultyID")
            @Html.ValidationMessageFor(model => model.DifficultyID, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
